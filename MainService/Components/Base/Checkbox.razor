@{
    <BaseInput TParam="bool" Label="@Label" Type="checkbox" InputValue="field" OnChanged="@fieldChanged" Css="checkbox-component" Attributes="Attributes" />
}

@code {

    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public bool field { get; set; }

    [Parameter]
    public EventCallback<bool> fieldChanged { get; set; }

    private Dictionary<string, object> Attributes { get; set; } = new();

    protected override void OnParametersSet()
    {
        if (field)
        {
            Attributes.TryAdd("checked", true);
        }
    }

}