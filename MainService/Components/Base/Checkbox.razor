@{
    <BaseInput TParam="bool" Label="@Label" Type="checkbox" InputValue="@InputValue" OnChanged="OnChanged" Css="checkbox-component" />
}

@code {

    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public bool InputValue { get; set; }

    [Parameter]
    public Action<bool> OnChanged { get; set; }
}