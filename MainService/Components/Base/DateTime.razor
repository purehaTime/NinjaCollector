@{
    <BaseInput TParam="System.DateTime" Label="@Label" Type="datetime-local" InputValue="@FormatDate()" OnChanged="fieldChanged" />
}

@code {

    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public System.DateTime field { get; set; }

    [Parameter]
    public EventCallback<System.DateTime> fieldChanged { get; set; }


    private string FormatDate()
    {
        return field == System.DateTime.MinValue 
            ? string.Empty 
            : field.ToString("yyyy-MM-ddThh:mm");
    }

}